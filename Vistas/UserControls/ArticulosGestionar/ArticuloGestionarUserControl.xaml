<UserControl x:Class="GestorRestReview.Vistas.UserControls.ArticulosGestionar.ArticuloGestionarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestorRestReview.Vistas.UserControls.ArticulosGestionar"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:Syncfusion="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <syncfusion:ButtonAdv Command="{Binding GuardarArticuloCommand}" Margin="20" DockPanel.Dock="Right" SizeMode="Small" Width="20" SmallIcon="/RestReviewV2;component/Assets/iconos/check.ico"/>
            <syncfusion:ButtonAdv Command="{Binding UploadCommand}" Margin="20" DockPanel.Dock="Right" SizeMode="Small" Width="20" SmallIcon="/RestReviewV2;component/Assets/iconos/upload.ico"/>
            <syncfusion:ButtonAdv Command="{Binding ValidateCommand}" Margin="20" DockPanel.Dock="Right" SizeMode="Small" Width="20" SmallIcon="/RestReviewV2;component/Assets/iconos/swear.ico"/>
            <inputLayout:SfTextInputLayout DockPanel.Dock="Right" Hint="Listas de palabras" ContainerType="None" >
                <ComboBox Width="200" ItemsSource="{Binding Path=ListasModeracion}" SelectedItem="{Binding Path=ListaModeracionActual}"></ComboBox>
            </inputLayout:SfTextInputLayout>
        </DockPanel>

        <DockPanel>
            <inputLayout:SfTextInputLayout DockPanel.Dock="Top" Hint="Titulo" ContainerType="Filled" Margin="20">
                <TextBox Text="{Binding Path=ArticuloActual.Titulo}"/>
            </inputLayout:SfTextInputLayout>

            
            <Syncfusion:StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Left" Margin="20" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Syncfusion:StackPanel Orientation="Horizontal">
                        <inputLayout:SfTextInputLayout DockPanel.Dock="Top" Hint="Autor" ContainerType="Filled">
                            <ComboBox Width="200" ItemsSource="{Binding Path=AutorLista}" SelectedItem="{Binding Path=ArticuloActual.Autor}"></ComboBox>
                        </inputLayout:SfTextInputLayout>
                        <syncfusion:ButtonAdv Command="{Binding AbirDialogoNuevoAutorCommand}" DockPanel.Dock="Right" SizeMode="Small" Width="20" SmallIcon="/RestReviewV2;component/Assets/iconos/add.ico"/>
                    </Syncfusion:StackPanel>
                    <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                        <Ellipse Height="100" Width="100">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Path=ArticuloActual.Autor.Imagen}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding Path=ArticuloActual.Autor.Nombre}"></TextBlock>
                        <TextBlock>
                            <Run>@</Run>
                            <Run Text="{Binding Path=ArticuloActual.Autor.NickName}"></Run>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                
                <Syncfusion:StackPanel Orientation="Horizontal">
                    <inputLayout:SfTextInputLayout DockPanel.Dock="Top" Hint="Seccion" ContainerType="Filled" >
                        <ComboBox Width="200" ItemsSource="{Binding Path=SeccionLista}" SelectedItem="{Binding Path=ArticuloActual.Seccion}"></ComboBox>
                    </inputLayout:SfTextInputLayout>
                    <syncfusion:ButtonAdv Command="{Binding AbrirDialogoNuevaSeccionCommand}" DockPanel.Dock="Right" SizeMode="Small" Width="20" SmallIcon="/RestReviewV2;component/Assets/iconos/add.ico"/>
                </Syncfusion:StackPanel>
            </Syncfusion:StackPanel>

            <syncfusion:ButtonAdv DockPanel.Dock="Bottom" Command="{Binding ExaminarImagenCommand}" Width="100" Label="Subir Imagen" SmallIcon="/RestReviewV2;component/Assets/iconos/check.ico"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" ></ColumnDefinition>
                    <ColumnDefinition Width="1*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <inputLayout:SfTextInputLayout Grid.Column="0" Hint="Contenido" ContainerType="Outlined" Margin="20">
                    <TextBox Height="120" Text="{Binding Path=ArticuloActual.Texto}"/>
                </inputLayout:SfTextInputLayout>
                <Image Grid.Column="1" Source="{Binding Path=ArticuloActual.Imagen}"></Image>

            </Grid>
        </DockPanel>
        
    </DockPanel>
</UserControl>
